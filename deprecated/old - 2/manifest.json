{
  "name": "Panel View for Google™ Translate",
  "short_name": "idanywhere",
  "description": "Access to a floating multilingual Google™ Translate panel on any webpage",
  "author": "Jeremy Schomery",
  "version": "0.4.4",
  "manifest_version": 2,
  "permissions": [
    "storage",
    "contextMenus",
    "webRequest",
    "webRequestBlocking",
    "*://*/*"
  ],
  "web_accessible_resources": [
    "data/iframe/index.html",
    "data/icons/activator.png",
    "data/icons/loading.gif",
    "data/panel/inject.css"
  ],
  "background": {
    "scripts": [
      "common.js"
    ]
  },
  "browser_action": {},
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": [
        "*://translate.google.com/*",
        "*://translate.google.com.hk/*",
        "*://translate.google.com.tr/*",
        "*://translate.google.com.tw/*",
        "*://translate.google.com.ua/*",
        "*://translate.google.com.vn/*",
        "*://translate.google.co.in/*",
        "*://translate.google.co.jp/*",
        "*://translate.google.co.kr/*",
        "*://translate.google.co.uk/*",
        "*://translate.google.cn/*",
        "*://translate.google.de/*",
        "*://translate.google.fr/*",
        "*://translate.google.it/*",
        "*://translate.google.pl/*",
        "*://translate.google.ru/*"
      ],
      "js": ["data/inject/inject.js"],
      "css": ["data/inject/inject.css"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    },
    {
      "matches": ["<all_urls>"],
      "exclude_matches": [
        "*://translate.google.com/*",
        "*://translate.google.com.hk/*",
        "*://translate.google.com.tr/*",
        "*://translate.google.com.tw/*",
        "*://translate.google.com.ua/*",
        "*://translate.google.com.vn/*",
        "*://translate.google.co.in/*",
        "*://translate.google.co.jp/*",
        "*://translate.google.co.kr/*",
        "*://translate.google.co.uk/*",
        "*://translate.google.cn/*",
        "*://translate.google.de/*",
        "*://translate.google.fr/*",
        "*://translate.google.it/*",
        "*://translate.google.pl/*",
        "*://translate.google.ru/*"
      ],
      "js": ["data/inject/top.js"],
      "run_at": "document_start",
      "all_frames": false
    },
    {
      "matches": [
        "*://translate.google.com/*",
        "*://translate.google.com.hk/*",
        "*://translate.google.com.tr/*",
        "*://translate.google.com.tw/*",
        "*://translate.google.com.ua/*",
        "*://translate.google.com.vn/*",
        "*://translate.google.co.in/*",
        "*://translate.google.co.jp/*",
        "*://translate.google.co.kr/*",
        "*://translate.google.co.uk/*",
        "*://translate.google.cn/*",
        "*://translate.google.de/*",
        "*://translate.google.fr/*",
        "*://translate.google.it/*",
        "*://translate.google.pl/*",
        "*://translate.google.ru/*"
      ],
      "js": ["data/panel/inject.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "options_ui": {
    "page": "data/options/index.html",
    "chrome_style": true
  },
  "homepage_url": "https://add0n.com/dictionary.html",
  "icons": {
    "16": "data/icons/16.png",
    "24": "data/icons/24.png",
    "32": "data/icons/32.png",
    "48": "data/icons/48.png",
    "64": "data/icons/64.png",
    "128": "data/icons/128.png"
  }
}
